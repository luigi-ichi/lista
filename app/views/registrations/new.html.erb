<div class="position-absolute top-50 start-50 translate-middle w-75">
  <div class="container">
    <h1 class="display-2">Sign Up</h1>
  </div>
  <br />
  <div class="container-fluid container-md card w-auto p-3 p-md-4">
    <div class="row row-cols-1">
      <%= form_with model: @user, url: registration_path, local: true do |form| %>
        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <% form.object.errors.full_messages.each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>
        <% end %>

        <div class="form-group mt-3">
          <%= form.label :email, class: "form-label fw-bold" %>
          <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= form.label :password, class: "form-label fw-bold" %>
          <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= form.label :password_confirmation, class: "form-label fw-bold" %>
          <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="mt-3 d-flex justify-content-end">
          <%= link_to "Back", root_path, class: "btn btn-outline-secondary me-2" %>
          <%= form.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
