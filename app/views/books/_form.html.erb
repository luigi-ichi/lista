<%= form_with(model: [@list, book]) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="form-group my-3 px-3 px-lg-5">
        <div>
            <%= form.label :title, "Title", class: "form-label", style: "display: block"%>
            <%= form.text_area :title, class: "form-control", style: "min-height: 2.5em"%>
        </div>

        <div class="mt-3">
            <%= form.label :image, "Image URL", class: "form-label", style: "display: block"%>
            <%= form.text_area :image, class: "form-control"%>
        </div>

        <div class="mt-3">
            <%= form.label :chaptersRead, "Chapters Read", class: "form-label", style: "display: block"%>
            <%= form.text_field :chaptersRead, type: "number", class: "form-control"%>
        </div>

        <div class="mt-3">
            <%= form.label :volumesRead, "Volumes Read", class: "form-label", style: "display: block"%>
            <%= form.text_field :volumesRead, type: "number", class: "form-control"%>
        </div>

        <div class="mt-3">
            <%= form.label :dateStarted, "Date Started", class: "form-label", style: "display: block"%>
            <%= form.date_field :dateStarted, class: "form-control"%>
        </div>

        <div class="mt-3">
            <%= form.label :dateCompleted, "Date Completed", class: "form-label", style: "display: block"%>
            <%= form.date_field :dateCompleted, class: "form-control"%>
        </div>

        <div class="mt-3">
            <%= form.label :status, class: "form-label", style: "display: block"%>
            <%= form.text_field :status, class: "form-control"%>
        </div>

        <div class="my-3">
        <div class="row row-cols-1 row-cols-md-2 g-3">
            <div class="col">
                <%= link_to "Cancel", list_path(@list), class: "btn btn-lg btn-secondary w-100" %>
            </div>
            <div class="col">
            <%= form.submit class: "btn btn-lg btn-primary w-100"%>
            </div>
        </div>
    </div>
  </div>
</div>
<% end %>
