<% content_for :title, "Editing book" %>

<div class="container">
  <div class="row align-items-center mb-4">
    <div class="col-5 col-md-3 text-center">
      <img src=<%= @book.image.present? ? @book.image : "https://placehold.co/400x600/png" %> class="img-fluid rounded" alt="<%= @book.title %>">
    </div>
    <div class="col">
      <h1><%= @book.title %></h1>
    </div>
  </div>
</div>

<%= render "form", book: @book %>

<button type="button" class="btn btn-lg btn-danger w-100 mt-2" data-bs-toggle="modal" data-bs-target="#deleteBookModal">
  <i class="fa-solid fa-trash"></i> Delete this book
</button>

<div class="modal fade" id="deleteBookModal" tabindex="-1" aria-labelledby="deleteBookModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="deleteBookModalLabel">Book Deletion</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this book? You cannot undo this action.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button>-->
        <%= button_to "Yes", @book, method: :delete, class: "btn btn-danger w-100", data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
</div>

