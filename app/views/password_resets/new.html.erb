<div class="position-absolute top-50 start-50 translate-middle w-75">
  <div class="container">
    <h1 class="display-2">Reset Your Password</h1>
  </div>
  <br />
  <div class="container-fluid container-md card w-auto p-3 p-md-4">
    <div class="row row-cols-1">
        <%= form_with url: password_reset_path do |form| %>
          <div class="form-group mt-2">
            <%= form.label :email, class: "form-label fw-bold" %>
            <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="mt-4 d-flex justify-content-end">
            <%= link_to "Back", new_session_path, class: "btn btn-outline-secondary me-2" %>
            <%= form.submit "Reset Password", class: "btn btn-primary" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
